{% extends "base.njk" %}

{% block main %}
	{{ content | safe }}
	<ul>
		{%- for post in collections.speaking -%}
			<li>
				<a href="{{ post.url }}">{{ post.data.title }}</a>
				<ul>
					{%- for conference in post.data.conferences -%}
						<li>
							{{ conference }}
						</li>
					{%- endfor -%}
				</ul>
			</li>
		{%- endfor -%}
	</ul>
{% endblock %}