{% extends "base.njk" %}

{% block main %}
	{{ content | safe }}
	<ul>
		{%- for post in collections.speaking -%}
			<li>
				<a href="{{ post.url }}">{{ post.data.title }}</a>
				{% if post.data.conferences %}
					<ul>
						{%- for conference in post.data.conferences -%}
							<li>
								{{ conference }}
							</li>
						{%- endfor -%}
					</ul>
				{% endif %}
			</li>
		{%- endfor -%}
	</ul>
{% endblock %}