{% extends "base.njk" %}

{% block main %}
	{{ content | safe }}
	<table>
		<tr>
			<th scope="col">Title</th>
			<th scope="col">Date published</th>
		</tr>
		{%- for post in collections.thoughts | sort(false, false, "data.title") -%}
			<tr>
				<td><a href="{{ post.url }}">{{ post.data.title }}</a></td>
				<td>{{ post.data.date }}</td>
			</tr>
		{%- endfor -%}
	</table>
{% endblock %}